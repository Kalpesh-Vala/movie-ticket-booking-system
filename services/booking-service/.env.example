# Environment Variables Template for Booking Service
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGODB_URI=mongodb://admin:admin123@localhost:27017/movie_booking?authSource=admin

# RabbitMQ Configuration  
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/
RABBITMQ_EXCHANGE=movie_app_events

# External Service URLs
CINEMA_SERVICE_GRPC_URL=localhost:9090
USER_SERVICE_REST_URL=http://localhost:8001
PAYMENT_SERVICE_REST_URL=http://localhost:8003

# Application Configuration
PORT=8000
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Booking Configuration
SEAT_LOCK_DURATION=300
PAYMENT_TIMEOUT=300
API_TIMEOUT=30

# CORS Configuration
CORS_ORIGINS=*